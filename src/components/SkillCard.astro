---
const { imageSrc, skillName, rating } = Astro.props;
---

<div class="group flex flex-row items-center space-y-4 p-4 bg-[#D1D1D1] border-2 border-[#01251F] rounded-lg shadow-md hover:shadow-[0_4px_12px_rgba(1,37,31,0.5)] hover:scale-105 transition-all duration-300 max-w-full overflow-hidden">
    <img src={imageSrc} alt={skillName} class="w-16 h-16 object-contain mr-2 flex-shrink-0" />
    <div class="flex flex-col overflow-hidden">
        <p class="text-[#000000] text-lg truncate">{skillName}</p>
        
        <!-- Estrellas con visibilidad controlada, debajo del nombre -->
        <div class="flex space-x-1 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        {[...Array(5)].map((_, index) => (
            <span class={`text-yellow-500 ${index < rating ? 'fa fa-star' : 'fa fa-star-o'}`}></span>
        ))}
        </div>
    </div>
</div>
